<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="filter-header">Tipo de Transacción <span>Selecciona para filtrar</span></h4>
      <div class="list-group">
        <% @types.each do |t| %>
          <% if t.id.to_i == active_type.to_i %>
            <%= link_to t.typename, expenses_path(:type => nil, :cat => active_cat, :date => active_date), class: "list-group-item active" %>
          <% else %>
            <%= link_to t.typename, expenses_path(:type => t.id, :cat => active_cat, :date => active_date), class: "list-group-item" %>
          <% end %>
        <% end %>
      </div>

      <h4 class="filter-header">Categoría <span>Selecciona para filtrar</span></h4>
      <div class="list-group filter-type">
        <% @categories.each do |c| %>
          <% if c.id.to_i == active_cat.to_i %>
            <%= link_to c.catname, expenses_path(:cat => nil, :type => active_type, :date => active_date), class: "list-group-item active" %>
          <% else %>
            <%= link_to c.catname, expenses_path(:cat => c.id, :type => active_type, :date => active_date), class: "list-group-item" %>
          <% end %>
        <% end %>
      </div>
    </div>

    <% total = 0 %>
    <% count = 0 %>
    <% average = 0 %>
    <% @transactions.each do |tr| %>
      <% total = total + tr.amount %>
      <% count = count + 1 %>
    <% end %>
    <% if count > 0 %>
      <% average = total / count %>
    <% else %>
      <% average = 0 %>
    <% end %>

    <div class="col-md-9 index-data">
      <div class="row" style="margin-top: 10px;">
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value"><%= number_to_currency(total,precision: 0) %></div>
          <div class="summary-label">Total</div>
        </diV>
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value"><%= count %></div>
          <div class="summary-label">Transacciones</div>
        </div>
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value"><%= number_to_currency(average,precision: 0) %></div>
          <div class="summary-label">Promedio</div>
        </div>
      </div>


      <% hoy = Date.today %>
      <% meses = Array.new %>
      <% for i in 0..12 do %>
        <% meses.push (hoy - i.month) %>
      <% end %>

      <div class="row" style="margin-top: 20px;">
        <div class="col-md-12">
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#newexpense"><span class="glyphicon glyphicon-plus"></span> Nuevo Gasto</button>

          <div id="newexpense" class="modal fade" role="dialog">
            <div class="modal-dialog">

              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Gasto Nuevo</h4>
                </div>
                <div class="modal-body">
                  <% @transaction = Transaction.new %>
                  <%= form_for @transaction, url: {action: "create"} do |tr| %>

                    <%= label_tag(:type_id, "Tipo:") %>
                    <% type_options = Array.new() %>
                    <% @types.each do |t| %>
                      <% temp = Array.new() %>
                      <% temp.push t.typename,t.id %>
                      <% type_options.push temp %>
                    <% end %>
                    <%= select_tag(:type_id, options_for_select(type_options)) %>

                    <%= label_tag(:date, "Fecha:") %>
                    <%= date_field_tag (:date) %>
                    <%= label_tag(:concept, "Concepto:") %>
                    <%= text_field_tag (:concept) %>
                    
                    <%= label_tag(:category_id, "Categoría:") %>
                    <% cat_options = Array.new() %>
                    <% @categories.each do |c| %>
                      <% temp = Array.new() %>
                      <% temp.push c.catname,c.id %>
                      <% cat_options.push temp %>
                    <% end %>
                    <%= select_tag(:category_id, options_for_select(cat_options)) %>

                    <%= label_tag(:amount, "Valor:") %>
                    <%= number_field_tag (:amount) %>
                    <%= submit_tag("Crear Gasto") %>
                  <% end %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
              </div>

            </div>
          </div>

          <h4 class="dropdown pull-right">
            <button type="button" class="dropdown-toggle btn btn-link" data-toggle="dropdown">
              <%= active_date.strftime("%B") + "-" + active_date.strftime("%Y") %> <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
              <% meses.each do |m| %>
                <% date = m.strftime("%B") + "-" + m.strftime("%Y") %>
                <li><%= link_to date, expenses_path(:date => m, :type => active_type, :cat => active_cat) %></li>
              <% end %>
            </ul>
          </h4>
        </div>
      </div>

      <table id="expenses-table" class="table table-hover" style="margin-top: 20px;">
        <thead>
          <tr>
            <th class="text-center">Día</th>
            <th>Concepto</th>
            <th class="text-right">Categoría</th>
            <th class="text-right">Valor</th>
          </tr>
        </thead>
        <tbody>
          <% @transactions.each do |tr| %>
            <tr>
              <td class="date">
                <div class="day"><%= tr.date.day %></div>
                <div class="month"><%= tr.date.strftime("%b") %></div>
              </td>
              <td>
                <div>
                  <span class="type"><%= tr.type.typename %></span>
                </div>
                <div>
                  <span class="concept"><%= tr.concept %></span>
                </div>
              </td>
              <td class="category text-right"><%= tr.category.catname %></td>
              <td class="text-right" style="width: 170px;">
                <div class="amount"><%= number_to_currency(tr.amount, precision: 0) %></div>
                <div class="actions">
                  <a href="#"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                  <a href="#"><span class="glyphicon glyphicon-trash"></span> Borrar</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
