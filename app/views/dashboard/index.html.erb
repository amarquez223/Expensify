<div class="container">
  <div class="row">
    <div class="total-box col-md-3">
      <%= number_to_currency(@transactions.expenses_today, precision: 0) %>
      <span>HOY</span>
    </div>
    <div class="total-box col-md-3">
      <%= number_to_currency(@transactions.expenses_yesterday, precision: 0) %>
      <span>AYER</span>
    </div>
    <div class="total-box col-md-3">
      <%= number_to_currency(@transactions.expenses_this_month, precision: 0) %>
      <span>ESTE MES</span>
    </div>
    <div class="total-box col-md-3">
      <%=  number_to_currency(@transactions.expenses_prev_month, precision: 0) %>
      <span>MES PASADO</span>
    </div>
  </div>

  <div class="row" style="margin-top: 40px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Últimos 6 Meses</div>
        <div class="panel-body">
          <%= content_tag :div, "", id: "chartContainer01", style: "height: 250px;", data: {transactions: @transactions.totals_by_type_last_6months} %>
        </div>
      </div>
    </div>
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Día</div>
        <div class="panel-body">
          <%= content_tag :div, "", id: "chartContainer02", style: "height: 250px;", data: {transactions: @transactions.totals_by_date_type} %>
        </div>
      </div>
    </div>
  </div>

  <div class="row" style="margin-top: 10px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Categoría</div>
        <div class="panel-body">
          <div id="category-chart" style="height: 250px;"></div>
        </div>
      </div>
    </div>
    <div class=" box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Acumulado</div>
        <div class="panel-body">
          <div id="month-acc" style="height: 250px;"></div>
        </div>
      </div>
    </div>
  </div>
</div>
